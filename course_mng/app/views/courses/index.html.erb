
<div class="logo">
  <%= active_link_to image_tag("msu_logo.jpg", :size => "125x125"), 
      "https://www.msudenver.edu/"%>
</div>

<div class="nav_links">
  <%= active_link_to 'Departments', '/departments'%>
  <%= active_link_to 'Professors', '/professors'%>
  <%= active_link_to 'Sections', '/sections'%>
  <%= active_link_to 'Semesters', '/semesters'%>
  <%= active_link_to 'Students', '/students'%>
</div>

<div class="line">
  <hr>
  </hr>
</div>

<h1>Courses</h1>
  <div class="search">
    <%= form_tag(search_courses_url, method: "get") do %>
    <%= label_tag(:course, "Search for course:") %>
    <%= text_field_tag :course %>
    <%= submit_tag "Search", :course => nil %>
    <% end %>
  </div>

<table>
  <thead>
    <tr>
      <th>Department</th>
      <th>Number</th>
      <th>Hours</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.sort_by(&:hours).each do |course| %>
      <tr>
        <td><%= course.department.name %></td>
        <td><%= course.number %></td>
        <td><%= course.hours %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

    <div class="right_images">
        <%= active_link_to image_tag("campus.jpg", :size => "450x358"), 
                                      "https://www.msudenver.edu/catalog/"%>
    </div>
</table>
</table>

<br>

<%= link_to 'New Course', new_course_path %>
