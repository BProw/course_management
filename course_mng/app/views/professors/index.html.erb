<h1>Professors</h1>


<div class="search">
  <%= form_tag(search_professors_url, method: "get") do %>
  <%= label_tag(:query, "Search for professor or office number:") %>
  <%= text_field_tag(:query, params[:query]) %>
  <%= submit_tag("Search", :query => nil) %>
  <% end %>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Office</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @professors.sort_by(&:name).each do |professor| %>
      <tr>
        <td><%= professor.name %></td>
        <td><%= professor.office %></td>
        <td><%= link_to 'Show', professor %></td>
        <td><%= link_to 'Edit', edit_professor_path(professor) %></td>
        <td><%= link_to 'Destroy', professor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

<div class="right_images">
  <%= active_link_to image_tag("cyber_security_panel.jpg", :size => "450x300"), 
      "https://webapp.msudenver.edu/directory/"%>
</div>
</table>

