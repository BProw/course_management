
<div class="logo">
  <%= active_link_to image_tag("msu_logo.jpg", :size => "125x125"), 
      "https://www.msudenver.edu/"%>
</div>

<div class="nav_links">
  <%= active_link_to 'Courses', '/courses'%>
  <%= active_link_to 'Departments', '/departments'%>
  <%= active_link_to 'Professors', '/professors'%>
  <%= active_link_to 'Semesters', '/semesters'%>
  <%= active_link_to 'Students', '/students'%>
</div>

<div class="line">
  <hr>
  </hr>
</div>

<h1>Sections</h1>
  <div class="search">
    <%= form_tag(search_sections_url, method: "get") do %>
    <%= label_tag(:query, "Search for section:") %>
    <%= text_field_tag(:query, params[:query]) %>
    <%= submit_tag("Search", :query => nil) %>
    <% end %>
  </div>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Professor</th>
      <th>Semester</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.sort_by(&:year).each do |section| %>
      <tr>
        <td><%= section.course.number %></td>
        <td><%= section.professor.name %></td>
        <td><%= section.semester.name %></td>
        <td><%= section.year %></td>
        <td><%= link_to 'Show', section %></td>
        <td><%= link_to 'Edit', edit_section_path(section) %></td>
        <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>


<div class="right_images">
  <%= active_link_to image_tag("aes_view.jpg", :size => "450x300"), 
      "https://www.msudenver.edu/catalog/"%>
</div>


</table>

<br>

