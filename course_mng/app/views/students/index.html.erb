
<div class="logo">
  <%= active_link_to image_tag("msu_logo.jpg", :size => "125x125"), 
      "https://www.msudenver.edu/"%>
</div>

<div class="nav_links">
  <%= active_link_to 'Courses', '/courses'%>
  <%= active_link_to 'Departments', '/departments'%>
  <%= active_link_to 'Professors', '/professors'%>
  <%= active_link_to 'Sections', '/sections'%>
  <%= active_link_to 'Semesters', '/semesters'%>
</div>


<div class="line">
  <hr>
  </hr>
</div>

<h1>Students</h1>

  <div class="search">
    <%= form_tag(search_students_url, method: "get") do %>
    <%= label_tag(:query, "Search for student:") %>
    <%= text_field_tag(:query, params[:query]) %>
    <%= submit_tag("Search", :query => nil) %>
    <% end %>
  </div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Identifier</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.sort_by(&:name).each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.identifier %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>


  <div class="right_images">
  <%= active_link_to image_tag("met_report.jpg", :size => "450x300"), 
      "https://www.msudenver.edu/studenthub/"%>
</div>
</table>

